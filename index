    <script>
        // L√≥gica de transici√≥n r√°pida inicial
        setTimeout(() => {
            document.getElementById('intro-text').innerText = "Y EST√ÅS INVITADO";
            setTimeout(() => {
                nextSlide(2);
            }, 1500);
        }, 2000);

        // Habilitar bot√≥n de nombre
        document.getElementById('userName').addEventListener('input', function(e) {
            document.getElementById('btnIngresar').disabled = e.target.value.trim() === "";
        });

        function nextSlide(n) {
            document.querySelectorAll('.slide').forEach(s => s.classList.remove('active'));
            document.getElementById('slide' + n).classList.add('active');
        }

        function checkRadio() {
            document.getElementById('btnEnviar').disabled = false;
        }

        function submitData() {
            const nombre = document.getElementById('userName').value;
            const respuesta = document.querySelector('input[name="asiste"]:checked').value;
            
            // AQU√ç PUEDES CONECTAR CON FORMSPREE O GOOGLE SHEETS
            console.log("Datos:", nombre, respuesta);

            if(respuesta === "Si") {
                nextSlide(5);
            } else {
                nextSlide(6);
            }
        }
    </script>
